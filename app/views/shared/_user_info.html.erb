<div class="flex items-center space-x-4 p-4 bg-white shadow rounded-lg">
  <%= link_to gravatar_for(current_user, size: 50), current_user, class: "rounded-full" %>
  <div>
    <h1 class="text-xl font-semibold text-gray-900"><%= current_user.name %></h1>
    <span class="text-gray-600">
      <strong><%= pluralize(current_user.microposts.count, "micropost") %></strong>
    </span>
    <div class="mt-2">
      <%= link_to "View my profile", current_user, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>