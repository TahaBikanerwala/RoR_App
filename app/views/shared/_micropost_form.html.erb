<%= form_with(model: @micropost, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div>
    <%= f.text_area :content, placeholder: "Compose new micropost...", class: "w-full p-2 rounded-md border border-gray-300" %>
  </div>
  <%= f.submit "Post", class: "bg-blue-500 text-white p-2 rounded-md mt-2" %>
  <span class="block mt-2">
    <%= f.file_field :image, direct_upload: true, accept: "image/jpeg, image/png, image/gif",class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-2 file:border-blue-500 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
  </span>
<% end %>