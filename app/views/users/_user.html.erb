<li class="flex items-center space-x-4 border-b border-gray-200 pb-4 ml-2">
  <%= link_to gravatar_for(user, size: 50), user, class: "rounded-full w-10 h-10" %>
  <div>
    <%= link_to user.name, user, class: "text-blue-500 hover:underline" %>
    <% if current_user.admin? && !current_user?(user) %>
      | <%= link_to 'Delete User?', user, data: { turbo_method: :delete, turbo_confirm: "You sure?" }, class: "text-blue-500 hover:text-red-400" %>
    <% end %>
  </div>
</li>